<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content" android:background="@drawable/category_border">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:layout_weight="1"
            android:textAllCaps="true"
            style="@style/textNormalGreen"
            android:id="@+id/item_name_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Item Name"/>
        <Button
            android:layout_gravity="right"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            style="@style/smallGreenButton"
            android:id="@+id/order_button"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:text="Place order"/>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            style="@style/textSmall"
            android:id="@+id/item_serving"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="right"
            android:text="time taken"
            style="@style/textSmall"
            android:id="@+id/item_time_taken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="10dp"
            android:layout_weight="1"
            android:layout_gravity="right"
            style="@style/textSmall"
            android:id="@+id/price_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Price"/>

        <RatingBar
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:id="@+id/ratingBar"
            android:isIndicator="true"
            android:rating="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:theme="@style/RatingBar"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="right"
            style="@style/textSmall"
            android:layout_weight="1"
            android:id="@+id/additional"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Additional"/>

        <TextView
            android:textStyle="bold"
            android:textAllCaps="true"
            style="@style/textNormalGreen"
            android:id="@+id/chef_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chef Name"/>
    </LinearLayout>




    <!--<TextView-->
        <!--style="@style/textSmall"-->
        <!--android:text="address"-->
        <!--android:id="@+id/chef_contact"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->

    <TextView
        style="@style/textSmall"
        android:text="description"
        android:id="@id/item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>