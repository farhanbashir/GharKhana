<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/update_location_layout"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="40dp">

        <ToggleButton
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/updateLocation"
            android:textSize="12sp"
            android:textOn="Updated"
            android:textOff="Update"
            android:layout_width="wrap_content"
            android:layout_height="36dp" />

        <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:text="UPDATE"-->
            <!--android:textSize="12sp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_marginEnd="10dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_height="36dp"-->
            <!--android:id="@+id/updateLocation" />-->

        <TextView
            android:layout_width="wrap_content"
            android:text="Update My Location:"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <LinearLayout
        android:weightSum="3"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:id="@+id/pakistani_khaney_button"
                android:layout_marginRight="10dp"
                style="@style/mainGreenButton"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Pakistani Khanay"/>
            <Button
                android:id="@+id/chinese_khaney_button"
                style="@style/mainGreenButton"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Chinese Khanay
"/>
        </LinearLayout>

        <LinearLayout
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:id="@+id/bbq_button"
                android:layout_marginRight="10dp"
                style="@style/mainGreenButton"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="B.B.Q"/>
            <Button
                android:id="@+id/seafood_button"
                style="@style/mainGreenButton"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Seafood"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:id="@+id/desserts_button"
                android:layout_marginRight="10dp"
                style="@style/mainGreenButton"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Desserts"/>
            <Button
                android:id="@+id/others_button"
                style="@style/mainGreenButton"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Others"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>